@model SportsStore.Payment.Models.PaymentDetails

@{
    ViewData["Title"] = "Create";
}
<head>

</head>

<h2>Create</h2>

<h4>Payment Details:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" type="text" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityNumber" class="control-label"></label>
                <input asp-for="SecurityNumber" class="form-control" type="text" />
                <span asp-validation-for="SecurityNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btnValidation" type="button" value="Process payment" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="~/js/jquery.creditCardValidator.js"></script>
<script src="~/js/creditcard.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script>
    var creditcard = new CreditCard();

    var checkCreditCard = function () {
        //ajoutez dynamiquement la valeur rentré dans CardNumber ci-dessus
        var cardNumberValue = document.getElementById("CardNumber").value;
        var securityNumber = document.getElementById("SecurityNumber").value;

        alert(creditcard.isValid(cardNumberValue));

        //Il faut dynamiquement loader depuis Cardnumber & Security number pour le 2ème argument
        console.log(creditcard.isSecurityCodeValid(cardNumberValue, securityNumber));

        // le résultat de ceci nous donne le type de carte (il faudrait l'afficher quelque part pour faire les gros dur)
        console.log(creditcard.getCreditCardNameByNumber(cardNumberValue));
    }

    document.getElementById("btnValidation").addEventListener('click', checkCreditCard);


</script>
